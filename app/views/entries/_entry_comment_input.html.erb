<h3>Comments (<%= @comments.count %>)</h3>
<ul class="comments">
  <%= render @comments %>
</ul>
<% if @user.allowed_comment?(@entry.id) && signed_in? %>
  <%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :comment, placeholder: "Post a comment..." %>
    <%= f.hidden_field :entry_id, value: @entry.id %>
  </div>
  <%= f.submit "Post comment", class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>
