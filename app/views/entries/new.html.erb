<% provide(:title, "New Entry") %>
<h1>New Entry</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [@user, @entry] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :body %>
      <%= f.text_area :body, size: "50x10" %>
      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>